{
  "name": "nightharbor",
  "description": "configure batch execution of lighthouse simply",
  "version": "0.5.0",
  "author": "Yoshiyuki Kato",
  "bin": {
    "nightharbor": "bin/cli.js",
    "nhb": "bin/cli.js"
  },
  "dependencies": {
    "cli-progress": "^2.0.0",
    "commander": "^2.17.0",
    "lighthouse": "^3.0.1",
    "puppeteer": "^1.7.0"
  },
  "devDependencies": {
    "@google-cloud/bigquery": "^1.3.0",
    "aws-sdk": "^2.309.0",
    "csvtojson": "^2.0.8",
    "fs-extra": "^7.0.0",
    "intelli-espower-loader": "^1.0.1",
    "lighthouse": "^3.1.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "power-assert": "^1.6.0",
    "puppeteer": "^1.7.0",
    "s3rver": "^2.2.5"
  },
  "keywords": [
    "lighthouse",
    "multiple targets",
    "website performance",
    "reporting"
  ],
  "license": "MIT",
  "main": "src",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoshiyukiKato/lighthouse-keeper"
  },
  "scripts": {
    "test": "$(npm bin)/nyc $(npm bin)/mocha --timeout 600000 --require intelli-espower-loader test/**/*.test.js",
    "report-coverage": "$(npm bin)/nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "release": "npm run before-release && npm publish src && npm run after-release ",
    "release-a": "npm run before-release && npm publish src --tag alpha && npm run after-release ",
    "release-b": "npm run before-release && npm publish src --tag beta && npm run after-release ",
    "before-release": "cp {README.md,package.json} src",
    "after-release": "rm src/{README.md,package.json}"
  }
}
